<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiu.dao.ActivityDao">

    <resultMap type="com.jiu.entity.Activity" id="ActivityMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="starttime" column="starttime" jdbcType="TIMESTAMP"/>
        <result property="detail" column="detail" jdbcType="VARCHAR"/>
        <result property="endtime" column="endtime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ActivityMap">
        select
          id, name, starttime, detail, endtime
        from app_test.activity
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ActivityMap">
        select
          id, name, starttime, detail, endtime
        from app_test.activity
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ActivityMap">
        select
          id, name, starttime, detail, endtime
        from app_test.activity
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="starttime != null">
                and starttime = #{starttime}
            </if>
            <if test="detail != null and detail != ''">
                and detail = #{detail}
            </if>
            <if test="endtime != null">
                and endtime = #{endtime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into app_test.activity(name, starttime, detail, endtime)
        values (#{name}, #{starttime}, #{detail}, #{endtime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update app_test.activity
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="starttime != null">
                starttime = #{starttime},
            </if>
            <if test="detail != null and detail != ''">
                detail = #{detail},
            </if>
            <if test="endtime != null">
                endtime = #{endtime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from app_test.activity where id = #{id}
    </delete>

</mapper>